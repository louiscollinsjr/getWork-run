# Enhanced Job Collection System Configuration
# Copy this to .env and customize for your setup

# ===================
# DATABASE CONFIGURATION
# ===================
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ===================
# COLLECTION STRATEGY
# ===================

# Overall collection limits
MAX_JOBS_PER_RUN=500
MAX_JOBS_PER_SEARCH=50
BATCH_SIZE=100

# Collection strategy: high_volume, quality_focused, comprehensive, tech_focused
COLLECTION_STRATEGY=comprehensive

# Hours old filter (how recent should jobs be?)
HOURS_OLD_FILTER=48

# ===================
# SITE CONFIGURATION
# ===================

# Sites to prioritize (comma-separated)
# Available: indeed, linkedin, glassdoor, google, zip_recruiter
SITES_PRIORITY=indeed,linkedin,glassdoor,zip_recruiter

# Site-specific quotas (optional - will use defaults if not set)
INDEED_DAILY_QUOTA=300
LINKEDIN_DAILY_QUOTA=100
GLASSDOOR_DAILY_QUOTA=150
GOOGLE_DAILY_QUOTA=100
ZIP_RECRUITER_DAILY_QUOTA=200

# ===================
# PROXY CONFIGURATION (Required for LinkedIn)
# ===================

# Proxy list (comma-separated, format: user:pass@host:port or host:port)
PROXY_LIST=proxy1.example.com:8080,proxy2.example.com:8080

# Enable proxy rotation
PROXY_ROTATION=true

# ===================
# SEARCH CONFIGURATION
# ===================

# Search locations (comma-separated)
SEARCH_LOCATIONS=Remote,San Francisco CA,New York NY,Seattle WA,Austin TX,Boston MA,Chicago IL

# Search focus areas (comma-separated)
# Available: software_engineering, data_and_ai, infrastructure, specialized
SEARCH_FOCUS=software_engineering,data_and_ai

# Custom search terms (optional - overrides category-based terms)
# SEARCH_TERMS=software engineer,data scientist,devops engineer

# ===================
# DATA QUALITY SETTINGS
# ===================

# Enable company name extraction from URLs/descriptions
ENABLE_COMPANY_EXTRACTION=true

# Enable duplicate detection
ENABLE_DUPLICATE_DETECTION=true

# Minimum company match rate (0.0-1.0)
MIN_COMPANY_MATCH_RATE=0.7

# Maximum description length (for cost optimization)
MAX_DESCRIPTION_LENGTH=2000

# ===================
# RATE LIMITING
# ===================

# Base delays between requests (seconds)
MIN_DELAY_BETWEEN_REQUESTS=5
MAX_DELAY_BETWEEN_REQUESTS=30

# Delays between different sites (seconds)
MIN_DELAY_BETWEEN_SITES=10

# Enable exponential backoff on errors
EXPONENTIAL_BACKOFF=true

# ===================
# MONITORING & ALERTS
# ===================

# Enable monitoring system
ENABLE_MONITORING=true

# Enable automated alerts
ENABLE_ALERTS=true

# Minimum daily jobs threshold for alerts
MIN_DAILY_JOBS_ALERT=100

# Maximum missing company rate before alert (0.0-1.0)
MAX_MISSING_COMPANY_RATE=0.3

# Maximum hours without collection before critical alert
MAX_HOURS_WITHOUT_COLLECTION=6

# ===================
# DEBUGGING & LOGGING
# ===================

# Debug mode (more verbose logging)
DEBUG_MODE=false

# Dry run mode (don't actually store jobs)
DRY_RUN=false

# Verbose logging
VERBOSE_LOGGING=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===================
# GITHUB ACTIONS SPECIFIC
# ===================

# Batch identifier for distributed workflows
# BATCH_IDENTIFIER=volume

# Collection strategy for this specific run
# COLLECTION_STRATEGY_OVERRIDE=high_volume

# ===================
# ADVANCED CONFIGURATION
# ===================

# Custom user agent rotation (optional)
# USER_AGENTS=Mozilla/5.0...,Mozilla/5.0...

# Enable compression for job descriptions
COMPRESS_DESCRIPTIONS=true

# Enable caching of search results
ENABLE_CACHING=false

# Cache duration in hours
CACHE_DURATION_HOURS=1

# ===================
# NOTIFICATION SETTINGS (Optional)
# ===================

# Slack webhook URL for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Discord webhook URL for notifications  
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email notification settings
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=alerts@yourcompany.com
