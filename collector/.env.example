# Production Job Collector Configuration
# Copy this file to .env and configure your settings

# Database Configuration (Required)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Search Configuration - USA Focused
# Comma-separated lists (no spaces around commas)
SEARCH_LOCATIONS="Remote,United States,New York NY,San Francisco CA,Los Angeles CA,Seattle WA,Austin TX,Dallas TX,Chicago IL,Boston MA,Denver CO,Atlanta GA,Miami FL,Washington DC"
SEARCH_TERMS="software engineer,senior software engineer,full stack developer,backend developer,frontend developer,data scientist,data engineer,devops engineer,python developer,javascript developer,react developer,node.js developer,machine learning engineer,cloud engineer,software architect"
SITES_PRIORITY="indeed,zip_recruiter"

# Performance Settings
RESULTS_PER_SEARCH=100
BATCH_SIZE=100
HOURS_OLD=48

# Rate Limiting (Production Optimized)
MIN_DELAY_BETWEEN_REQUESTS=15
MAX_DELAY_BETWEEN_REQUESTS=45
MAX_SEARCHES_PER_SITE_PER_DAY=200
MIN_DELAY_BETWEEN_SITES=30

# Text Optimization (Cost Reduction)
COMPRESS_DESCRIPTIONS=true
MAX_DESCRIPTION_LENGTH=2000

# Modes
DEBUG_MODE=false
DRY_RUN=false
VERBOSE_LOGGING=false

# Progress Tracking
PROGRESS_FILE=collector_progress.json
